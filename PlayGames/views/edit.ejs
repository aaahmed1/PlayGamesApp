<%- include('./partials/header.ejs')%>
<main>
    <form class="new-event-form" action="/events/<%= event.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div>
            <label for="category">Category</label>
            <select name="category" id="category" required>
                <option value="">--Select a Category--</option>
                <%["Video Games", "Board Games", "Soccer", "Basketball", "Tennis", "Other"].forEach(category => {
                    if (category === event.category) {%>
                        <option value="<%=category%>" selected><%=category%></option>
                    <%} else {%>
                        <option value="<%=category%>"><%=category%></option>
                    <%}
                });%>                
            </select>
        </div>
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="title" value="<%= event.title%>" required>
        </div>
        <div>
            <label for="details">Details</label>
            <textarea name="details" id="details" placeholder="description" required><%= event.details%></textarea>
        </div>
        <div>
            <label for="where">Where</label>
            <input type="text" name="where" id="where" placeholder="location" value="<%= event.where%>" required>
        </div>
        <div>
            <label for="start">Start</label>
            <input type="datetime-local" name="start" id="start" value="<%=start%>" required>
        </div>
        <div>
            <label for="end">End</label>
            <input type="datetime-local" name="end" id="end" value="<%=end%>" required>
        </div>
        <div>
            <label for="image">Image</label>
            <input type="file" name="image" id="image" accept="image/png, image/jpeg" required>
        </div>
        <div>
            <button class="submit-button" type="submit" id="submit">Submit</button>
        </div>
    </form>
</main>
<%- include('./partials/footer.ejs')%>